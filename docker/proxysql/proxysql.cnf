# Config file contents referred to as "/path/to/proxysql.cnf"
datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin;radmin:radmin"
    mysql_ifaces="0.0.0.0:6032"
    web_enabled=true
    web_port=6080
    restapi_enabled=true
    restapi_port=6070
    prometheus_memory_metrics_interval=60
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=1000
    have_compress=true
    poll_timeout=2000
    monitor_username="root"
    monitor_password="secret"
    monitor_history=600000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=500
    interfaces="0.0.0.0:6033"
    default_schema="db_local_test"
    stacksize=1048576
    server_version="8.4"
    connect_timeout_server=3000    
    ping_interval_server_msec=12000
    ping_timeout_server=500
    commands_stats=false
    sessions_sort=false
    connect_retries_on_failure=3
}

mysql_users=
({
    username="root"
    password="secret"
    default_hostgroup=0
    max_connections=100
    default_schema="db_local_test"
    active=1
})

mysql_servers=
({
    address="127.0.0.1"
    port=3306
    hostgroup=0
    status="ONLINE"
    weight=1
    compression=0
    max_connections=50
})